{
  "manifest_version": 3,
  "name": "Auto-Flow",
  "version": "1.0.0",
  "description": "Workflow automation extension - define and run automation workflows in TypeScript",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ]
}
