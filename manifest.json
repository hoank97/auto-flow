{
  "manifest_version": 3,
  "name": "Auto Meta - Automation for Meta AI",
  "version": "1.0.0",
  "description": "Workflow automation for Meta AI - batch process prompts and download results",
  "action": {
    "default_title": "Auto Meta"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel"
  ]
}
